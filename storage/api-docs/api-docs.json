{
    "swagger": "2.0",
    "info": {
        "title": "Authentication  API",
        "description": "L5 Swagger Authentication API description",
        "contact": {
            "email": "arditdev@gmail.com"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "",
    "schemes": [
        "http",
        "https"
    ],
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "description": "Register to the authentication api",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Your email address",
                        "required": true,
                        "type": "string",
                        "default": "admin@gmail.com"
                    },
                    {
                        "name": "first_name",
                        "in": "query",
                        "description": "Your first name",
                        "required": true,
                        "type": "string",
                        "default": "John"
                    },
                    {
                        "name": "last_name",
                        "in": "query",
                        "description": "Your last name",
                        "required": true,
                        "type": "string",
                        "default": "Doe"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Your password",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "/oauth/token": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "description": "Login using your credentials in order to receive the access and refresh token",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "parameters": [
                    {
                        "name": "grant_type",
                        "in": "formData",
                        "description": "Grant Type",
                        "required": true,
                        "type": "string",
                        "default": "password"
                    },
                    {
                        "name": "client_id",
                        "in": "formData",
                        "description": "Client ID",
                        "required": true,
                        "type": "string",
                        "default": "1"
                    },
                    {
                        "name": "client_secret",
                        "in": "formData",
                        "description": "Client Secret",
                        "required": true,
                        "type": "string",
                        "default": "test"
                    },
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "Your email address",
                        "required": true,
                        "type": "string",
                        "default": "admin@gmail.com"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Your password",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        }
    },
    "definitions": {},
    "securityDefinitions": {
        "passport": {
            "type": "oauth2",
            "flow": "password",
            "tokenUrl": "/oauth/token",
            "scopes": {}
        }
    }
}